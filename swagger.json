{
  "swagger": "2.0",
  "info": {
    "title": "Grab Restaurant API",
    "description": "All RESTful API Endpoint for Grab Restaurant",
    "version": "0.0.1"
  },
  "paths": {
    "/api/auth/singup": {
      "post": {
        "tags": ["Authentication"],
        "description": "Sign in to Grab Restaurant",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "email": { "type": "string" },
                "password": { "type": "string" },
                "roles": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "number" },
                    "username": { "type": "string" },
                    "email": { "type": "string" },
                    "roles": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "accessToken": { "type": "string" }
                  }
                },
                "example": {
                  "id": 4,
                  "username": "admin",
                  "email": "admin@gmail.com",
                  "roles": ["moderator", "admin"],
                  "accessToken": "eyJhbGc....S_2b42-zD4"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/singin": {
      "post": {
        "tags": ["Authentication"],
        "description": "Sign in to Grab Restaurant",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "password": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully signed in",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "roles": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "accessToken": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": 3,
                    "username": "username",
                    "email": "email@webmail.npru.ac.th",
                    "roles": ["ROLES_MODERATOR", "ROLES_ADMIN"],
                    "accessToken": "eyJhbGc....S_2b42-zD4"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/Restaurants": {
      "get": {
        "tags": ["Restaurant"],
        "responses": {
          "200": {
            "description": "Successfully restaurant data"
          }
        }
      }
    },
    "/RestaurantShil3aiinu": {
      "post": {
        "tags": ["Restaurant"],
        "description": "Add to Grab Restaurant",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "Img": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully addmenu Restaurant",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string" },
                    "Img": { "type": "string" }
                  }
                },
                "example": {
                "brand": "Ferrari",
                "model": "488 Pista Spider",
                "price":"11,600,000",
                "images":"https://images.autofun.co.th/file1/16d84793ae9a41aa9d8baddef4266881_912x516.jpg",
                "firstprimarycolor":"#ffffff",
                "secondprimarycolor":"#000099",
                "thirdprimarycolor":"#000000"
                }
              }
            }
          }
        }
      }
    },
    "/Restaurants/{id}": {
      "get": {
        "tags": ["Restaurant"],
        "description": "Get Restaurant by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully get restaurant by Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "Img": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/RestaurantShil3aiinu/{id}": {
      "put": {
        "tags": ["Restaurant"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "Img": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully updated restaurant"
          }
        }
      },
      "delete": {
        "tags": ["Restaurant"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully deleted restaurant"
          }
        }
      }
    }
  }
}
